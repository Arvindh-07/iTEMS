    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .navbar {
            padding: 10px 20px;
        }

        .navbar-brand {
            font-size: 24px;
        }

        .nav-item {
            margin-left: 20px;
        }

        .carousel-inner img {
            width: 100%;
            height: 500px;
            object-fit: cover;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100% - 70px); /* Adjust height to account for navbar */
        }

        .slider-container {
            position: relative;
            width: 100%;
            max-width: 1200px;
            margin: auto;
            overflow: hidden;
        }

        .slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

        .slide {
            min-width: 100%;
            box-sizing: border-box;
        }

        .slider-container img {
            width: 100%;
            display: block;
        }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }

        .carousel-indicators {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

            .carousel-indicators button {
                border: none;
                background-color: gray;
                width: 10px;
                height: 10px;
                border-radius: 50%;
                margin: 5px;
                cursor: pointer;
            }

            .carousel-indicators .active {
                background-color: black;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            color: #555;
        }

            .footer .container {
                text-align: center;
                height: 100%;
            }

            .footer a {
