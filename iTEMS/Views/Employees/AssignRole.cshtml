@model iTEMS.ViewModels.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h1>Assign Role</h1>

@using (Html.BeginForm("AssignRole", "Employees", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="userId">User:</label>
        @Html.DropDownListFor(model => model.UserId, ViewBag.Users as SelectList, "Select User", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="roleName">Role:</label>
        @Html.DropDownListFor(model => model.RoleName, ViewBag.Roles as SelectList, "Select Role", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
}
