<h1>Dashboard</h1>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2 class="d-flex justify-content-between align-items-center">
                Projects Overview
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </h2>
        </div>
        <div class="card-body">
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-info elevation-1"><i class="fa-solid fa-bars-progress"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Total Projects</span>
                            <span class="info-box-number">@Model.TotalProjects</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-teal elevation-1"><i class="fa-solid fa-list-check"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Projects in Planning Phase</span>
                            <span class="info-box-number">@Model.PlanningProjects</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-indigo elevation-1"><i class="fa-solid fa-spinner"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Pending Projects</span>
                            <span class="info-box-number">@Model.PendingProjects</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-warning elevation-1"><i class="fa-regular fa-clock"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Delayed Projects</span>
                            <span class="info-box-number">@Model.DelayedProjects</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-danger elevation-1"><i class="fa-solid fa-ban"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Blocked Projects</span>
                            <span class="info-box-number">@Model.BlockedProjects</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-success elevation-1"><i class="fa-solid fa-circle-check"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Completed Projects</span>
                            <span class="info-box-number">@Model.CompletedProjects</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

